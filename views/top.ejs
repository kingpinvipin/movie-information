<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <link href="stylesheets/home.css" rel="stylesheet">

  </head>
 
  <body>
    <a href="/" style="margin-left: 10px;margin-top: 5px;"><button type="button" class="btn btn-primary btn-lg " style="border-radius: 5px;margin-top: 0px;margin-top: 0px;">Home</button></a>
      <center><h1>Top  Rated Movies</h1></center>
      <div class="container" style="margin-top:50px ;background-color: aqua;border-radius: 25px;">
          <div class="jumbotron" style="border-radius: 30px;margin-top: 30px;">
            <% for(var i=0; i < result.length; i++) { %>
                <ul>
                  <h2><li style="color: red;"><%= result[i].movie %></li></h2>
                  <h3 style="color: green;">Actor : <%= result[i].actor %> &nbsp; Actress : <%= result[i].actress %> </h3>
                  <h3><%= result[i].releaseyear %></h3>
                  <h3><%= result[i].rating %></h3>
                  <h3><%= result[i].review %></h3>
                </ul>
                <br>
                <a href="/addtofav/:<%= result[i].movie %>/:<%= result[i].releaseyear %>/:<%= result[i].rating %>/<%= result[i].review %>/:<%= result[i].actor %>/:<%= result[i].actress %>"><button type="button" class="btn btn-primary btn-lg btn-block" style="border-radius: 25px;">Add to Favourites</button></a>
                <br>
            <% } %>
          </div>
      </div>
  </body>
</html>
