<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home</title>
    <link href="stylesheets/home.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    

  </head>
 
  <body>
    <a href="/" style="margin-left: 10px;margin-top: 5px;"><button type="button" class="btn btn-primary btn-lg " style="border-radius: 5px;margin-top: 0px;margin-top: 0px;">Home</button></a>
    <div class="container" style="margin-top:50px ;background-color: aqua;border-radius: 25px;">
      <div class="dropdown" style="margin-top: 15px;">
        <button class="btn btn-primary btn-lg btn-block dropdown-toggle" type="button" data-toggle="dropdown" style="border-radius: 20px;">Sort by<span class="caret"></span></button>
        <ul class="dropdown-menu">
          <% if(actor) { %>
            <li><a href="/sort/:releaseyear/:<%= aname %>/:<%= actor %>">Release Year</a></li>
            <li><a href="/sort/:rating/:<%= aname %>/:<%= actor %>">Rating</a></li>
          <% } else { %>
          <li><a href="/sort/:releaseyear/:<%= aname %>">Release Year</a></li>
          <li><a href="/sort/:rating/:<%= aname %>">Rating</a></li>
          <% } %>
        </ul>
      </div>
      <div class="jumbotron" style="border-radius: 30px;margin-top: 30px;">
        <% if(result.length == 0) { %>
          <center><h2 style="color: crimson;">Not Found</h2></center>
        <% } else  { %>
            <center><h2> <%= aname %></h2></center>
        <% } %>
        <br><br>
        <% for(var i=0; i < result.length; i++) { %>
            <ul>
              <h2><li style="color:red;"><%= result[i].movie %></li></h2>
              <h3><%= result[i].releaseyear %></h3>
              <h3><%= result[i].rating %></h3>
              <h3><%= result[i].review %></h3>
            </ul>
            <br>
            <a href="/addtofav/:<%= result[i].movie %>/:<%= result[i].releaseyear %>/:<%= result[i].rating %>/:<%= result[i].review %>/:<%= result[i].actor %>/:<%= result[i].actress %>"><button type="button" class="btn btn-primary btn-lg btn-block" style="border-radius: 25px;">Add to Favourites</button></a>
        <% } %>
      </div>
    </div>
  </body>
</html>
